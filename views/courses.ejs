<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Courses</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
  <style>
    :root {
      --color-primary: #55D368;
      --color-primary-light: #6FE886;
      --color-primary-dark: #2FA748;

      --color-secondary: #8EE29A;
      --color-secondary-light: #A8F7B3;
      --color-secondary-dark: #65B171;
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { admin, currentPath: "courses" }) %>

    <!-- Main content -->
    <div class="flex-1 flex flex-col min-h-screen">
      <!-- Header -->
      <%- include('partials/header', { admin, pageTitle: 'Courses' }) %>

      <!-- Page content -->
      <main class="p-6 space-y-6">

        <!-- Top bar: title + filters + Add Course -->
        <section class="bg-white rounded-2xl shadow-sm border-l-4 border-[var(--color-primary)] p-4 flex flex-col md:flex-row md:items-center md:justify-between gap-3">
          <div>
            <h3 class="text-base font-semibold text-[var(--color-primary-dark)]">Courses</h3>
            <p class="text-xs text-gray-500">
              Manage all courses. Total: <%= meta?.totalItems || 0 %>
            </p>
          </div>

          <div class="flex flex-col md:flex-row items-stretch md:items-center gap-3 w-full md:w-auto">

            <!-- Filters: search + status + includeCounts -->
            <form method="GET" action="/admin-views/courses" class="flex flex-col md:flex-row items-stretch md:items-center gap-2 w-full md:w-auto">

              <!-- Search -->
              <input type="text" name="q" placeholder="Search by title..." value="<%= (filters && filters.q) || q || '' %>" class="flex-1 md:w-64 rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]" />

              <!-- Status -->
              <select name="status" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]">
                <option value="">All status</option>
                <option value="DRAFT" <%= (filters && filters.status === 'DRAFT') ? 'selected' : '' %>>Draft</option>
                <option value="PUBLISHED" <%= (filters && filters.status === 'PUBLISHED') ? 'selected' : '' %>>Published</option>
                <option value="ARCHIVED" <%= (filters && filters.status === 'ARCHIVED') ? 'selected' : '' %>>Archived</option>
              </select>

              <!-- Include counts -->
              <label class="inline-flex items-center gap-1 text-[11px] text-gray-600">
                <input type="checkbox" name="includeCounts" value="true" <%= (filters && filters.includeCounts) ? 'checked' : '' %> class="rounded border-gray-300 text-[var(--color-primary)] focus:ring-[var(--color-primary)]" />
                Include counts
              </label>

              <!-- Order by -->
              <select name="orderBy" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]">
                <option value="">Order by</option>
                <option value="createdAt" <%= (filters && filters.orderBy === 'createdAt') ? 'selected' : '' %>>Created At</option>
                <option value="updatedAt" <%= (filters && filters.orderBy === 'updatedAt') ? 'selected' : '' %>>Updated At</option>
                <option value="title" <%= (filters && filters.orderBy === 'title') ? 'selected' : '' %>>Title</option>
                <option value="id" <%= (filters && filters.orderBy === 'id') ? 'selected' : '' %>>ID</option>
              </select>

              <!-- Order dir -->
              <select name="orderDir" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]">
                <option value="">Direction</option>
                <option value="DESC" <%= (filters && filters.orderDir === 'DESC') ? 'selected' : '' %>>DESC</option>
                <option value="ASC" <%= (filters && filters.orderDir === 'ASC') ? 'selected' : '' %>>ASC</option>
              </select>

              <button type="submit" class="inline-flex items-center rounded-lg
                bg-[var(--color-primary)] text-white text-xs font-semibold px-3 py-2
                hover:bg-[var(--color-primary-dark)]
                focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
                Apply
              </button>
            </form>

            <!-- Add Course button -->
            <button type="button" onclick="openAddCourseModal()" class="inline-flex items-center justify-center rounded-lg
                bg-[var(--color-secondary-dark)] text-white text-xs font-semibold px-4 py-2
                hover:bg-[var(--color-primary-dark)]
                focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
              + Add Course
            </button>

          </div>
        </section>

        <!-- Courses table -->
        <section class="bg-white rounded-2xl shadow-sm p-4">
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs table-auto">
              <thead>
                <tr class="border-b bg-gray-50 text-gray-600">
                  <th class="px-3 py-2 text-left font-medium">#</th>
                  <th class="px-3 py-2 text-left font-medium">Course</th>
                  <th class="px-3 py-2 text-left font-medium">Access</th>
                  <th class="px-3 py-2 text-left font-medium">Price</th>
                  <th class="px-3 py-2 text-left font-medium">Status</th>
                  <th class="px-3 py-2 text-left font-medium text-right">Counts</th>
                  <th class="px-3 py-2 text-left font-medium text-right">Actions</th>
                </tr>
              </thead>

              <tbody class="divide-y divide-gray-100">
                <% if (items && items.length > 0) { %>
                <% items.forEach(function(course, index) { %>
                <tr class="hover:bg-gray-50">

                  <!-- Index -->
                  <td class="px-3 py-2 text-gray-500">
                    <%= (meta.itemsPerPage * (meta.currentPage - 1)) + (index + 1) %>
                  </td>

                  <!-- Course -->
                  <td class="px-3 py-2">
                    <div class="flex items-center gap-3">
                      <div class="h-10 w-10 rounded-lg bg-gray-100 border overflow-hidden flex items-center justify-center">
                        <% if (course.thumbnailUrl) { %>
                        <img src="<%= course.thumbnailUrl %>" alt="thumbnail" class="h-full w-full object-cover" />
                        <% } else { %>
                        <span class="text-[10px] text-gray-400">No image</span>
                        <% } %>
                      </div>

                      <div class="flex flex-col">
                        <span class="font-semibold text-gray-800">
                          <%= course.title || '-' %>
                        </span>
                        <span class="text-[10px] text-gray-500">
                          ID: <%= course.id %> • Updated:
                          <%= course.updatedAt ? new Date(course.updatedAt).toLocaleString() : '-' %>
                        </span>
                      </div>
                    </div>
                  </td>

                  <!-- Access -->
                  <td class="px-3 py-2">
                    <% if (course.isFree) { %>
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-emerald-50 text-emerald-700">
                      Free
                    </span>
                    <% } else { %>
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-yellow-50 text-yellow-700">
                      Paid
                    </span>
                    <% } %>
                  </td>

                  <!-- Price -->
                  <td class="px-3 py-2 text-gray-700">
                    <% if (course.isFree) { %>
                    <span class="inline-flex items-center rounded-full bg-emerald-50 text-emerald-700 px-2 py-0.5 text-[10px] font-medium">
                      Free
                    </span>
                    <% } else { %>
                    <span class="text-[11px] text-gray-800">
                      <%= (course.currency || 'NGN') %> <%= course.price || 0 %>
                    </span>
                    <% } %>
                  </td>

                  <!-- Status -->
                  <td class="px-3 py-2">
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium
                      <%= course.status === 'PUBLISHED'
                        ? 'bg-green-50 text-green-700'
                        : (course.status === 'ARCHIVED'
                          ? 'bg-gray-100 text-gray-700'
                          : 'bg-slate-100 text-slate-700') %>">
                      <%= course.status || '-' %>
                    </span>
                  </td>

                  <!-- Counts -->
                  <td class="px-3 py-2 text-right text-gray-700">
                    <% const counts = course.counts || course.stats || null; %>
                    <% if (counts) { %>
                    <div class="flex flex-col items-end leading-tight">
                      <span class="text-[11px] font-semibold text-gray-800">
                        Lessons: <%= counts.lessonsCount ?? counts.lessonCount ?? 0 %>
                      </span>
                      <span class="text-[10px] text-gray-500">
                        Enrollments: <%= counts.enrollmentsCount ?? counts.enrollmentCount ?? 0 %>
                      </span>
                    </div>
                    <% } else { %>
                    <span class="text-[10px] text-gray-400">—</span>
                    <% } %>
                  </td>

                  <!-- Actions -->
                  <td class="px-3 py-2 text-right space-x-1 whitespace-nowrap">
                    <a href="/admin-views/course/<%= course.id %>" class="inline-flex items-center rounded-md border border-sky-500 text-sky-600 px-2 py-1 text-[11px] font-semibold hover:bg-sky-50 transition">
                      Preview
                    </a>

                    <button type="button" class="inline-flex items-center rounded-md border border-[var(--color-primary)] text-[var(--color-primary-dark)] px-2 py-1 text-[11px] font-semibold hover:bg-[var(--color-secondary-light)] transition" onclick="openUpdateCourseModal(this)" data-course-id="<%= course.id %>" data-course-title="<%= course.title || '' %>" data-course-description="<%- course.descriptionHtml || '' %>" data-course-is-free="<%= course.isFree ? 'true' : 'false' %>" data-course-price="<%= course.price || '' %>" data-course-currency="<%= course.currency || 'NGN' %>" data-course-status="<%= course.status || '' %>" data-course-thumbnail-url="<%= course.thumbnailUrl || '' %>">
                      Update
                    </button>

                    <button type="button" class="inline-flex items-center px-2 py-1 text-[11px] rounded-md border border-red-500 text-red-600 hover:bg-red-50" onclick="openDeleteCourseModal(this)" data-course-id="<%= course.id %>" data-course-title="<%= course.title || '' %>">
                      Delete
                    </button>
                  </td>

                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="7" class="px-3 py-6 text-center text-gray-500 text-xs">
                    No courses found.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (meta && meta.totalPages > 1) { %>
          <div class="mt-4 flex items-center justify-between text-xs text-gray-600">
            <div>
              Page <span class="font-semibold"><%= meta.currentPage %></span>
              of <span class="font-semibold"><%= meta.totalPages %></span> —
              Showing <%= items.length %> of <%= meta.totalItems %> courses
            </div>

            <div class="flex items-center gap-1">
              <% const currentQ = (filters && filters.q) || q || ''; %>
              <% const currentStatus = (filters && filters.status) || ''; %>
              <% const includeCounts = (filters && filters.includeCounts) ? 'true' : ''; %>
              <% const currentOrderBy = (filters && filters.orderBy) || ''; %>
              <% const currentOrderDir = (filters && filters.orderDir) || ''; %>

              <% function buildQuery(pageNum) {
                  let qs = '?page=' + pageNum;
                  if (currentQ) qs += '&q=' + encodeURIComponent(currentQ);
                  if (currentStatus) qs += '&status=' + encodeURIComponent(currentStatus);
                  if (includeCounts) qs += '&includeCounts=true';
                  if (currentOrderBy) qs += '&orderBy=' + encodeURIComponent(currentOrderBy);
                  if (currentOrderDir) qs += '&orderDir=' + encodeURIComponent(currentOrderDir);
                  return qs;
                } %>

              <!-- Prev -->
              <% if (meta.currentPage > 1) { %>
              <a href={"/admin-views/courses" + buildQuery(meta.currentPage - 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Prev
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Prev
              </span>
              <% } %>

              <!-- Page numbers -->
              <% for (let p = 1; p <= meta.totalPages; p++) { %>
              <a href={"/admin-views/courses" + buildQuery(p)} class="px-2 py-1 rounded border text-xs
                <%= p === meta.currentPage
                  ? 'border-[var(--color-primary)] bg-[var(--color-secondary-light)] text-[var(--color-primary-dark)] font-semibold'
                  : 'border-gray-300 hover:bg-[var(--color-secondary-light)]' %>">
                <%= p %>
              </a>
              <% } %>

              <!-- Next -->
              <% if (meta.currentPage < meta.totalPages) { %>
              <a href={"/admin-views/courses" + buildQuery(meta.currentPage + 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Next
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Next
              </span>
              <% } %>
            </div>
          </div>
          <% } %>
        </section>
      </main>
    </div>
  </div>

  <%- include('partials/courses/add-course-modal') %>
  <%- include('partials/courses/delete-course-modal') %>
  <%- include('partials/courses/update-course-modal') %>

</body>

</html>