<!-- admin-nuggets.ejs (patterned after your Courses page) -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Nuggets</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>

  <style>
    :root {
      --color-primary: #55d368;
      --color-primary-light: #6fe886;
      --color-primary-dark: #2fa748;

      --color-secondary: #8ee29a;
      --color-secondary-light: #a8f7b3;
      --color-secondary-dark: #65b171;
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { admin, currentPath: "nuggets" }) %>

    <!-- Main content -->
    <div class="flex-1 flex flex-col min-h-screen">
      <!-- Header -->
      <%- include('partials/header', { admin, pageTitle: 'Nuggets' }) %>

      <!-- Page content -->
      <main class="p-6 space-y-6">
        <!-- Top bar -->
        <section class="bg-white rounded-2xl shadow-sm border-l-4 border-[var(--color-primary)] p-4 flex flex-col md:flex-row md:items-center md:justify-between gap-3">
          <div>
            <h3 class="text-base font-semibold text-[var(--color-primary-dark)]">
              Nuggets
            </h3>
            <p class="text-xs text-gray-500">
              Manage all nuggets. Total: <%= meta?.totalItems || 0 %>
            </p>
          </div>

          <div class="flex flex-col md:flex-row items-stretch md:items-center gap-3 w-full md:w-auto">
            <!-- Filters -->
            <form method="GET" action="/admin-views/nuggets" class="flex flex-col md:flex-row items-stretch md:items-center gap-2 w-full md:w-auto">
              <!-- Search -->
              <input type="text" name="q" placeholder="Search by title..." value="<%= (filters && filters.q) || q || '' %>" class="flex-1 md:w-64 rounded-lg border border-gray-300 px-3 py-2 text-xs
                    focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                    focus:border-[var(--color-primary)]" />

              <!-- Visibility -->
              <select name="visibility" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                    focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                    focus:border-[var(--color-primary)]">
                <option value="">All visibility</option>
                <option value="PUBLIC" <%= (filters && filters.visibility === 'PUBLIC') ? 'selected' : '' %>>
                  Public
                </option>
                <option value="COMMUNITY_ONLY" <%= (filters && filters.visibility === 'COMMUNITY_ONLY') ? 'selected' : '' %>>
                  Community only
                </option>
              </select>

              <!-- Community -->
              <select name="community" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                    focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                    focus:border-[var(--color-primary)]">
                <option value="">All community</option>
                <option value="SINGLE" <%= (filters && filters.community === 'SINGLE') ? 'selected' : '' %>>
                  Single
                </option>
                <option value="MARRIED" <%= (filters && filters.community === 'MARRIED') ? 'selected' : '' %>>
                  Married
                </option>
                <option value="PARENT" <%= (filters && filters.community === 'PARENT') ? 'selected' : '' %>>
                  Parent
                </option>
              </select>

              <!-- Order by -->
              <select name="orderBy" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                    focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                    focus:border-[var(--color-primary)]">
                <option value="">Order by</option>
                <option value="createdAt" <%= (filters && filters.orderBy === 'createdAt') ? 'selected' : '' %>>
                  Created At
                </option>
                <option value="updatedAt" <%= (filters && filters.orderBy === 'updatedAt') ? 'selected' : '' %>>
                  Updated At
                </option>
                <option value="title" <%= (filters && filters.orderBy === 'title') ? 'selected' : '' %>>
                  Title
                </option>
                <option value="id" <%= (filters && filters.orderBy === 'id') ? 'selected' : '' %>>
                  ID
                </option>
              </select>

              <button type="submit" class="inline-flex items-center rounded-lg
                    bg-[var(--color-primary)] text-white text-xs font-semibold px-3 py-2
                    hover:bg-[var(--color-primary-dark)]
                    focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
                Apply
              </button>
            </form>

            <!-- Add Nugget button -->
            <button type="button" onclick="openCreateNuggetModal()" class="inline-flex items-center justify-center rounded-lg
                  bg-[var(--color-secondary-dark)] text-white text-xs font-semibold px-4 py-2
                  hover:bg-[var(--color-primary-dark)]
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
              + Add Nugget
            </button>
          </div>
        </section>

        <!-- Nuggets table -->
        <section class="bg-white rounded-2xl shadow-sm p-4">
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs table-auto">
              <thead>
                <tr class="border-b bg-gray-50 text-gray-600">
                  <th class="px-3 py-2 text-left font-medium">#</th>
                  <th class="px-3 py-2 text-left font-medium">Nugget</th>
                  <th class="px-3 py-2 text-left font-medium">Community</th>
                  <th class="px-3 py-2 text-right font-medium">Actions</th>
                </tr>
              </thead>

              <tbody class="divide-y divide-gray-100">
                <% if (items && items.length > 0) { %>
                <% items.forEach(function(nugget, index) { %>
                <tr class="hover:bg-gray-50">
                  <!-- Index -->
                  <td class="px-3 py-2 text-gray-500">
                    <%= (meta.itemsPerPage * (meta.currentPage - 1)) + (index + 1) %>
                  </td>

                  <!-- Nugget -->
                  <td class="px-3 py-2">
                    <div class="flex items-center gap-3">

                      <div class="flex flex-col">
                        <span class="font-semibold text-gray-800">
                          <%= nugget.title || '-' %>
                        </span>
                        <span class="text-[10px] text-gray-500">
                          ID: <%= nugget.id %> • Updated:
                          <%= nugget.updatedAt ? new Date(nugget.updatedAt).toLocaleString() : '-' %>
                        </span>
                      </div>
                    </div>
                  </td>

                  <!-- Community -->
                  <td class="px-3 py-2">
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium
                            bg-[var(--color-secondary-light)] text-[var(--color-secondary-dark)]">
                      <%= nugget.nuggetType || '—' %>
                    </span>
                  </td>


                  <!-- Actions -->
                  <td class="px-3 py-2 text-right space-x-1 whitespace-nowrap">
                    <button type="button" class="inline-flex items-center rounded-md border border-sky-500 text-sky-600 px-2 py-1 text-[11px] font-semibold hover:bg-sky-50 transition" onclick="openPreviewNuggetModal(this)" data-nugget-id="<%= nugget.id %>">
                      Preview
                    </button>

                    <button type="button" class="inline-flex items-center rounded-md border border-[var(--color-primary)] text-[var(--color-primary-dark)] px-2 py-1 text-[11px] font-semibold hover:bg-[var(--color-secondary-light)]" onclick="openUpdateNuggetModal(this)" data-nugget-id="<%= nugget.id %>" data-nugget-title="<%- (nugget.title || '').replace(/"/g, '&quot;') %>" data-nugget-body="<%- (nugget.body || '').replace(/"/g, '&quot;') %>" data-nugget-type="<%= nugget.nuggetType || '' %>" data-nugget-publish-at="<%= nugget.publishAt ? new Date(nugget.publishAt).toISOString() : '' %>">
                      Update
                    </button>

                    <button type="button" class="inline-flex items-center px-2 py-1 text-[11px] rounded-md border border-red-500 text-red-600 hover:bg-red-50" onclick="openDeleteNuggetModal(this)" data-nugget-id="<%= nugget.id %>" data-nugget-title="<%- (nugget.title || '').replace(/"/g,'&quot;') %>">
                      Delete
                    </button>
                  </td>
                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="7" class="px-3 py-6 text-center text-gray-500 text-xs">
                    No nuggets found.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (meta && meta.totalPages > 1) { %>
          <div class="mt-4 flex items-center justify-between text-xs text-gray-600">
            <div>
              Page <span class="font-semibold"><%= meta.currentPage %></span>
              of <span class="font-semibold"><%= meta.totalPages %></span> —
              Showing <%= items.length %> of <%= meta.totalItems %> nuggets
            </div>

            <div class="flex items-center gap-1">
              <% const currentQ = (filters && filters.q) || q || ''; %>
              <% const currentStatus = (filters && filters.status) || ''; %>
              <% const currentVisibility = (filters && filters.visibility) || ''; %>
              <% const currentCommunity = (filters && filters.community) || ''; %>
              <% const includeCounts = (filters && filters.includeCounts) ? 'true' : ''; %>
              <% const currentOrderBy = (filters && filters.orderBy) || ''; %>
              <% const currentOrderDir = (filters && filters.orderDir) || ''; %>

              <% function buildQuery(pageNum) {
                      let qs = '?page=' + pageNum;
                      if (currentQ) qs += '&q=' + encodeURIComponent(currentQ);
                      if (currentStatus) qs += '&status=' + encodeURIComponent(currentStatus);
                      if (currentVisibility) qs += '&visibility=' + encodeURIComponent(currentVisibility);
                      if (currentCommunity) qs += '&community=' + encodeURIComponent(currentCommunity);
                      if (includeCounts) qs += '&includeCounts=true';
                      if (currentOrderBy) qs += '&orderBy=' + encodeURIComponent(currentOrderBy);
                      if (currentOrderDir) qs += '&orderDir=' + encodeURIComponent(currentOrderDir);
                      return qs;
                    } %>

              <!-- Prev -->
              <% if (meta.currentPage > 1) { %>
              <a href={"/admin-views/nuggets" + buildQuery(meta.currentPage - 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Prev
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Prev
              </span>
              <% } %>

              <!-- Page numbers -->
              <% for (let p = 1; p <= meta.totalPages; p++) { %>
              <a href={"/admin-views/nuggets" + buildQuery(p)} class="px-2 py-1 rounded border text-xs
                        <%= p === meta.currentPage
                          ? 'border-[var(--color-primary)] bg-[var(--color-secondary-light)] text-[var(--color-primary-dark)] font-semibold'
                          : 'border-gray-300 hover:bg-[var(--color-secondary-light)]' %>">
                <%= p %>
              </a>
              <% } %>

              <!-- Next -->
              <% if (meta.currentPage < meta.totalPages) { %>
              <a href={"/admin-views/nuggets" + buildQuery(meta.currentPage + 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Next
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Next
              </span>
              <% } %>
            </div>
          </div>
          <% } %>
        </section>
      </main>
    </div>
  </div>

  <!-- Modals -->
  <%- include('partials/nuggets/add-nugget-modal') %>
  <%- include('partials/nuggets/delete-nugget-modal') %>
  <%- include('partials/nuggets/update-nugget-modal') %>
  <%- include('partials/nuggets/preview-nugget-modal') %>

</body>

</html>