<!-- views/partials/courses/lessons/update-lesson-modal.ejs -->
<div
  id="updateLessonModal"
  class="fixed inset-0 z-50 hidden bg-black/50 p-3 sm:p-6"
>
  <div class="flex h-full w-full items-center justify-center">
    <div
      class="w-full max-w-2xl overflow-hidden rounded-2xl bg-white shadow-xl"
      role="dialog"
      aria-modal="true"
    >
      <div
        class="sticky top-0 z-10 flex items-center justify-between border-b border-gray-100 bg-white px-5 py-4"
      >
        <h3 class="text-base font-semibold text-gray-800">Update Lesson</h3>
        <button
          type="button"
          class="inline-flex h-9 w-9 items-center justify-center rounded-full text-gray-500 hover:bg-gray-100 hover:text-gray-700"
          onclick="closeUpdateLessonModal()"
        >
          ×
        </button>
      </div>

      <div class="max-h-[80vh] overflow-y-auto px-5 py-4">
        <form id="updateLessonForm" class="space-y-3 text-xs">
          <input type="hidden" id="updateLessonId" name="lessonId" />

          <div>
            <label class="block font-medium text-gray-700 mb-1">Title</label>
            <input
              type="text"
              id="updateLessonTitle"
              name="title"
              required
              class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-[var(--color-primary)]"
            />
          </div>

          <div>
            <label class="block font-medium text-gray-700 mb-1"
              >YouTube URL (optional)</label
            >
            <input
              type="url"
              id="updateLessonYoutubeUrl"
              name="youtubeUrl"
              class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-[var(--color-primary)]"
            />
          </div>

          <div>
            <label class="block font-medium text-gray-700 mb-1"
              >Sort Order (optional)</label
            >
            <input
              type="number"
              id="updateLessonSortOrder"
              name="sortOrder"
              min="1"
              class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-[var(--color-primary)]"
            />
          </div>

          <div>
            <label class="block font-medium text-gray-700 mb-1"
              >Description</label
            >
            <div
              id="updateLessonDescriptionEditor"
              class="bg-white border border-gray-300 rounded-lg"
              style="min-height: 140px"
            ></div>
            <textarea
              id="updateLessonDescriptionHtml"
              name="descriptionHtml"
              class="hidden"
            ></textarea>
          </div>

          <div
            class="sticky bottom-0 z-10 -mx-5 mt-4 border-t border-gray-100 bg-white px-5 py-3"
          >
            <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-2">
              <button
                type="button"
                class="w-full sm:w-auto px-3 py-2 text-xs rounded-md border border-gray-300 text-gray-700 hover:bg-gray-100"
                onclick="closeUpdateLessonModal()"
              >
                Cancel
              </button>

              <button
                id="updateLessonSubmitBtn"
                type="submit"
                class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-4 py-2 text-xs rounded-md bg-[var(--color-primary)] text-white font-semibold hover:bg-[var(--color-primary-dark)] disabled:opacity-60 disabled:cursor-not-allowed"
              >
                <span id="updateLessonSubmitText">Update lesson</span>
                <svg
                  id="updateLessonSubmitSpinner"
                  class="hidden animate-spin h-4 w-4 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                  ></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8v3a5 5 0 00-5 5H4z"
                  ></path>
                </svg>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    let updateLessonQuill;

    function ensureUpdateLessonQuill() {
      if (updateLessonQuill) return;
      const editorEl = document.getElementById('updateLessonDescriptionEditor');
      if (!editorEl) return;

      updateLessonQuill = new Quill('#updateLessonDescriptionEditor', {
        theme: 'snow',
        placeholder: 'Update the lesson description...',
        modules: {
          toolbar: [
            ['bold', 'italic', 'underline'],
            [{ list: 'ordered' }, { list: 'bullet' }],
            ['link'],
            ['clean'],
          ],
        },
      });
    }

    window.openUpdateLessonModal = function (btn) {
      const modal = document.getElementById('updateLessonModal');
      if (!modal) return;

      ensureUpdateLessonQuill();

      const lessonId = btn.dataset.lessonId;
      const title = btn.dataset.lessonTitle || '';
      const desc = btn.dataset.lessonDescription || '';
      const youtubeUrl = btn.dataset.lessonYoutubeUrl || '';
      const sortOrder = btn.dataset.lessonSortOrder || '';

      document.getElementById('updateLessonId').value = lessonId;
      document.getElementById('updateLessonTitle').value = title;
      document.getElementById('updateLessonYoutubeUrl').value = youtubeUrl;
      document.getElementById('updateLessonSortOrder').value = sortOrder;

      if (updateLessonQuill) {
        if (!desc || desc.trim() === '') updateLessonQuill.setContents([]);
        else updateLessonQuill.root.innerHTML = desc;
      }

      modal.classList.remove('hidden');
      modal.classList.add('block');
    };

    window.closeUpdateLessonModal = function () {
      const modal = document.getElementById('updateLessonModal');
      if (!modal) return;

      modal.classList.add('hidden');
      modal.classList.remove('block');

      const form = document.getElementById('updateLessonForm');
      if (form) form.reset();

      if (updateLessonQuill) updateLessonQuill.setContents([]);

      const btn = document.getElementById('updateLessonSubmitBtn');
      const text = document.getElementById('updateLessonSubmitText');
      const spinner = document.getElementById('updateLessonSubmitSpinner');
      if (btn && text && spinner) {
        btn.disabled = false;
        spinner.classList.add('hidden');
        text.textContent = 'Update lesson';
      }
    };

    document.addEventListener('DOMContentLoaded', () => {
      ensureUpdateLessonQuill();

      const form = document.getElementById('updateLessonForm');
      if (!form) return;

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Sync Quill → textarea
        const descEl = document.getElementById('updateLessonDescriptionHtml');
        if (updateLessonQuill && descEl) {
          let html = updateLessonQuill.root.innerHTML;
          if (html === '<p><br></p>' || html.trim() === '') html = '';
          descEl.value = html;
        }

        const lessonId = document.getElementById('updateLessonId').value;
        const courseId = window.CourseDetailsState?.courseId;

        const btn = document.getElementById('updateLessonSubmitBtn');
        const text = document.getElementById('updateLessonSubmitText');
        const spinner = document.getElementById('updateLessonSubmitSpinner');

        btn.disabled = true;
        spinner.classList.remove('hidden');
        text.textContent = 'Updating...';

        try {
          // ✅ Build JSON payload
          const payload = {
            title: (form.querySelector('[name="title"]')?.value || '').trim(),
            youtubeUrl: (
              form.querySelector('[name="youtubeUrl"]')?.value || ''
            ).trim(),
            descriptionHtml: (
              form.querySelector('[name="descriptionHtml"]')?.value || ''
            ).trim(),
            sortOrder: form.querySelector('[name="sortOrder"]')?.value,
          };

          // ✅ Remove empty optional fields
          if (!payload.title) delete payload.title;
          if (!payload.youtubeUrl) delete payload.youtubeUrl;
          if (!payload.descriptionHtml) delete payload.descriptionHtml;

          // sortOrder → number (optional)
          if (
            payload.sortOrder === '' ||
            payload.sortOrder === undefined ||
            payload.sortOrder === null
          ) {
            delete payload.sortOrder;
          } else {
            const n = Number(payload.sortOrder);
            payload.sortOrder = Number.isNaN(n) ? payload.sortOrder : n;
          }

          const res = await fetch(
            `/admin/courses/${courseId}/lessons/${lessonId}`,
            {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json',
                Accept: 'application/json',
              },
              body: JSON.stringify(payload),
              credentials: 'include',
            },
          );

          if (!res.ok) {
            let msg = 'Failed to update lesson.';
            try {
              const data = await res.json();
              msg = Array.isArray(data.message)
                ? data.message.join(', ')
                : data.message || msg;
            } catch (_) {}
            alert(msg);

            btn.disabled = false;
            spinner.classList.add('hidden');
            text.textContent = 'Update lesson';
            return;
          }

          window.location.reload();
        } catch (err) {
          console.error(err);
          alert('Something went wrong.');
          btn.disabled = false;
          spinner.classList.add('hidden');
          text.textContent = 'Update lesson';
        }
      });
    });
  })();
</script>
