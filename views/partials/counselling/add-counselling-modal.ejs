<div
  id="addCounsellingModal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40"
>
  <div class="bg-white rounded-2xl shadow-lg w-full max-w-lg p-6">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-sm font-semibold text-gray-800">
        Add Counselling Session
      </h3>
      <button
        type="button"
        class="text-gray-400 hover:text-gray-600 text-lg leading-none"
        onclick="closeAddCounsellingModal()"
      >
        ×
      </button>
    </div>

    <form
      id="addCounsellingForm"
      action="/counselling/create"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-3 text-xs"
    >
      <!-- Title -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">Title</label>
        <input
          type="text"
          name="title"
          class="w-full rounded-lg border border-gray-300 px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="e.g. Anxiety Management Session"
          required
        />
      </div>

      <!-- Description -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">Description</label>
        <textarea
          name="description"
          rows="3"
          class="w-full rounded-lg border border-gray-300 px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="Short overview of what this session covers..."
        ></textarea>
      </div>

      <!-- Cover Image (Optional) -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">
          Cover Image (optional)
        </label>
        <input
          type="file"
          name="coverUrl"
          accept="image/*"
          class="w-full rounded-lg border border-gray-300 px-3 py-2 text-xs
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
        />
      </div>

      <!-- Type + Mode -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <!-- Type -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">Type</label>
          <select
            name="type"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
          >
            <option value="INDIVIDUAL">Individual</option>
            <option value="COUPLES">Couples</option>
            <option value="FAMILY">Family</option>
            <option value="GROUP">Group</option>
          </select>
        </div>

        <!-- Mode -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">Mode</label>
          <select
            name="mode"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
          >
            <option value="ONLINE">Online</option>
            <option value="OFFLINE">Offline (In-person)</option>
          </select>
        </div>
      </div>

      <!-- Status + Duration -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <!-- Status -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">Status</label>
          <select
            name="status"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
          >
            <option value="DRAFT">Draft</option>
            <option value="PUBLISHED">Published</option>
            <option value="ARCHIVED">Archived</option>
          </select>
        </div>

        <!-- Duration -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">
            Duration (minutes)
          </label>
          <input
            type="number"
            name="durationMinutes"
            min="1"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
            placeholder="e.g. 45"
            required
          />
        </div>
      </div>

      <!-- Price + Max Clients -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <!-- Price -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">
            Price (optional, ₦)
          </label>
          <input
            type="number"
            name="price"
            step="0.01"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
            placeholder="Leave empty for free"
          />
        </div>

        <!-- Max Clients Per Session -->
        <div>
          <label class="block font-medium text-gray-700 mb-1">
            Max clients per session (optional)
          </label>
          <input
            type="number"
            name="maxClientsPerSession"
            min="1"
            class="w-full rounded-lg border border-gray-300 px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                   focus:border-[var(--color-primary)]"
            placeholder="e.g. 1 for 1-on-1, 5 for group"
          />
        </div>
      </div>

      <!-- What you get -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">
          What clients get (optional)
        </label>
        <textarea
          name="whatYouGet"
          rows="2"
          class="w-full rounded-lg border border-gray-300 px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="e.g. Personalized coping strategies, worksheets, follow-up resources..."
        ></textarea>
      </div>

      <!-- Who it's for -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">
          Who this is for (optional)
        </label>
        <textarea
          name="whoItsFor"
          rows="2"
          class="w-full rounded-lg border border-gray-300 px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="e.g. Young adults, working professionals, students..."
        ></textarea>
      </div>

      <!-- How it works -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">
          How it works (optional)
        </label>
        <textarea
          name="howItWorks"
          rows="2"
          class="w-full rounded-lg border border-gray-300 px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="e.g. 10-min check-in → exploration → action plan → Q&A..."
        ></textarea>
      </div>

      <!-- Active / Featured toggles -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div class="flex items-center gap-2">
          <input
            id="addCounsellingIsActive"
            type="checkbox"
            name="isActive"
            value="true"
            class="rounded border-gray-300 text-[var(--color-primary)]
                   focus:ring-[var(--color-primary)]"
            checked
          />
          <label
            for="addCounsellingIsActive"
            class="text-[11px] text-gray-700 font-medium"
          >
            Mark as active
          </label>
        </div>

        <div class="flex items-center gap-2">
          <input
            id="addCounsellingIsFeatured"
            type="checkbox"
            name="isFeatured"
            value="true"
            class="rounded border-gray-300 text-[var(--color-primary)]
                   focus:ring-[var(--color-primary)]"
          />
          <label
            for="addCounsellingIsFeatured"
            class="text-[11px] text-gray-700 font-medium"
          >
            Mark as featured
          </label>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-4 flex justify-end gap-2">
        <button
          type="button"
          class="px-3 py-1.5 text-xs rounded-md border border-gray-300 text-gray-700 hover:bg-gray-100"
          onclick="closeAddCounsellingModal()"
        >
          Cancel
        </button>

        <button
          id="addCounsellingSubmitBtn"
          type="submit"
          class="inline-flex items-center gap-2 px-4 py-1.5 text-xs rounded-md bg-[var(--color-primary)] text-white font-semibold hover:bg-[var(--color-primary-dark)] disabled:opacity-60 disabled:cursor-not-allowed"
        >
          <span id="addCounsellingSubmitText">Save counselling</span>

          <svg
            id="addCounsellingSubmitSpinner"
            class="hidden animate-spin h-4 w-4 text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8v3a5 5 0 00-5 5H4z"
            ></path>
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  function openAddCounsellingModal() {
    const modal = document.getElementById('addCounsellingModal');
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function closeAddCounsellingModal() {
    const modal = document.getElementById('addCounsellingModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');

    // Reset form & button after closing
    const form = document.getElementById('addCounsellingForm');
    if (form) form.reset();

    const btn = document.getElementById('addCounsellingSubmitBtn');
    const text = document.getElementById('addCounsellingSubmitText');
    const spinner = document.getElementById('addCounsellingSubmitSpinner');

    if (btn && text && spinner) {
      btn.disabled = false;
      spinner.classList.add('hidden');
      text.textContent = 'Save counselling';
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('addCounsellingForm');
    const submitBtn = document.getElementById('addCounsellingSubmitBtn');
    const submitText = document.getElementById('addCounsellingSubmitText');
    const submitSpinner = document.getElementById('addCounsellingSubmitSpinner');

    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Loading state
      submitBtn.disabled = true;
      submitSpinner.classList.remove('hidden');
      submitText.textContent = 'Saving...';

      try {
        const formData = new FormData(form);

        // Remove empty optional numeric fields
        ['price', 'maxClientsPerSession', 'durationMinutes'].forEach((field) => {
          if (formData.get(field) === '') {
            formData.delete(field);
          }
        });

        // Handle booleans for checkboxes explicitly (if unchecked, they won't be sent at all)
        // No special handling needed here unless you want to force "false"

        // If no file selected, remove so multer doesn't complain
        const file = formData.get('coverUrl');
        if (!file || !file.name) {
          formData.delete('coverUrl');
        }

        const res = await fetch(form.action, {
          method: 'POST',
          body: formData,
          credentials: 'include',
        });

        if (!res.ok) {
          let msg = 'Error creating counselling session.';
          try {
            const data = await res.json();
            msg = Array.isArray(data.message)
              ? data.message.join(', ')
              : data.message || msg;
          } catch (_) {}
          alert(msg);

          submitBtn.disabled = false;
          submitSpinner.classList.add('hidden');
          submitText.textContent = 'Save counselling';
          return;
        }

        window.location.reload();
      } catch (err) {
        console.error(err);
        alert('Something went wrong.');

        submitBtn.disabled = false;
        submitSpinner.classList.add('hidden');
        submitText.textContent = 'Save counselling';
      }
    });
  });
</script>
