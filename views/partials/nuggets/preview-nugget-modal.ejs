<!-- =========================
     PREVIEW NUGGET MODAL (WITH ENGAGEMENT STATS)
     Fetches: GET http://localhost:9090/nuggets/details/:id
========================= -->
<div
  id="previewNuggetModal"
  class="fixed inset-0 z-50 hidden bg-black/50 p-3 sm:p-6"
>
  <div class="flex h-full w-full items-center justify-center">
    <div
      class="w-full max-w-3xl overflow-hidden rounded-2xl bg-white shadow-xl"
      role="dialog"
      aria-modal="true"
      aria-labelledby="previewNuggetTitle"
    >
      <!-- Sticky header -->
      <div
        class="sticky top-0 z-10 flex items-center justify-between border-b border-gray-100 bg-white px-5 py-4"
      >
        <div class="min-w-0">
          <h3
            id="previewNuggetTitle"
            class="truncate text-base font-semibold text-gray-800"
          >
            Nugget Preview
          </h3>
          <p
            id="previewNuggetSubTitle"
            class="mt-0.5 truncate text-[11px] text-gray-500"
          >
            —
          </p>
        </div>

        <button
          type="button"
          class="inline-flex h-9 w-9 items-center justify-center rounded-full text-gray-500 hover:bg-gray-100 hover:text-gray-700"
          onclick="closePreviewNuggetModal()"
          aria-label="Close modal"
        >
          ×
        </button>
      </div>

      <!-- Body -->
      <div class="max-h-[80vh] overflow-y-auto px-5 py-4">
        <!-- Loading state -->
        <div id="previewNuggetLoading" class="hidden space-y-3">
          <div class="h-4 w-40 animate-pulse rounded bg-gray-100"></div>
          <div class="h-3 w-64 animate-pulse rounded bg-gray-100"></div>
          <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4">
            <div class="h-16 animate-pulse rounded-xl bg-gray-100"></div>
            <div class="h-16 animate-pulse rounded-xl bg-gray-100"></div>
            <div class="h-16 animate-pulse rounded-xl bg-gray-100"></div>
            <div class="h-16 animate-pulse rounded-xl bg-gray-100"></div>
          </div>
          <div class="h-28 w-full animate-pulse rounded-xl bg-gray-100"></div>
          <div class="grid grid-cols-2 gap-2">
            <div class="h-10 animate-pulse rounded-xl bg-gray-100"></div>
            <div class="h-10 animate-pulse rounded-xl bg-gray-100"></div>
          </div>
        </div>

        <!-- Error state -->
        <div
          id="previewNuggetError"
          class="hidden rounded-xl border border-red-200 bg-red-50 p-3 text-xs text-red-700"
        >
          Could not load nugget details.
        </div>

        <!-- Content -->
        <div id="previewNuggetContent" class="hidden space-y-4">
          <!-- Pills row -->
          <div class="flex flex-wrap items-center gap-2">
            <span
              id="previewNuggetTypePill"
              class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-[10px] font-medium text-gray-700"
            >
              —
            </span>

            <span
              id="previewNuggetStatusPill"
              class="hidden inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-[10px] font-medium text-slate-700"
            >
              —
            </span>

            <span
              id="previewNuggetSchedulePill"
              class="hidden inline-flex items-center rounded-full bg-yellow-50 px-2 py-0.5 text-[10px] font-medium text-yellow-700"
            >
              Scheduled
            </span>
          </div>

          <!-- ✅ Engagement stats -->
          <section class="rounded-2xl border border-gray-200 bg-gray-50 p-4">
            <div class="flex items-center justify-between gap-3">
              <div>
                <h4 class="text-[11px] font-semibold text-gray-800">
                  Engagement
                </h4>
                <p class="text-[11px] text-gray-500">
                  Snapshot of user interactions on this nugget.
                </p>
              </div>

              <span
                id="previewEngagementUpdatedAtPill"
                class="hidden rounded-full bg-white px-2 py-0.5 text-[10px] font-medium text-gray-600 border border-gray-200"
              >
                Updated: —
              </span>
            </div>

            <div class="mt-3 grid grid-cols-2 gap-2 sm:grid-cols-3">
              <div class="rounded-xl border border-gray-200 bg-white p-3">
                <p class="text-[10px] font-semibold text-gray-500">Comments</p>
                <p
                  id="previewStatComments"
                  class="mt-1 text-lg font-semibold text-gray-800"
                >
                  0
                </p>
              </div>

              <div class="rounded-xl border border-gray-200 bg-white p-3">
                <p class="text-[10px] font-semibold text-gray-500">Likes</p>
                <p
                  id="previewStatLikes"
                  class="mt-1 text-lg font-semibold text-gray-800"
                >
                  0
                </p>
              </div>

              <div class="rounded-xl border border-gray-200 bg-white p-3">
                <p class="text-[10px] font-semibold text-gray-500">Shares</p>
                <p
                  id="previewStatShares"
                  class="mt-1 text-lg font-semibold text-gray-800"
                >
                  0
                </p>
              </div>
            </div>

            <!-- Optional secondary stats row -->
            <div
              id="previewSecondaryStatsRow"
              class="mt-2 hidden grid grid-cols-2 gap-2 sm:grid-cols-4"
            >
              <div class="rounded-xl border border-gray-200 bg-white p-3">
                <p class="text-[10px] font-semibold text-gray-500">Comments</p>
                <p
                  id="previewStatComments"
                  class="mt-1 text-lg font-semibold text-gray-800"
                >
                  0
                </p>
              </div>
            </div>
          </section>

          <!-- Title -->
          <div class="rounded-xl border border-gray-200 bg-white p-4">
            <p class="text-[11px] font-semibold text-gray-800">Title</p>
            <p
              id="previewNuggetTitleValue"
              class="mt-1 text-sm font-semibold text-gray-800"
            >
              —
            </p>
          </div>

          <!-- Body -->
          <div class="rounded-xl border border-gray-200 bg-white p-4">
            <div class="flex items-center justify-between gap-2">
              <p class="text-[11px] font-semibold text-gray-800">Body</p>
              <button
                type="button"
                id="previewCopyBtn"
                class="inline-flex items-center rounded-md border border-gray-300 bg-white px-2 py-1 text-[11px] font-semibold text-gray-700 hover:bg-gray-50 disabled:cursor-not-allowed disabled:opacity-60"
              >
                Copy
              </button>
            </div>

            <p
              id="previewNuggetBodyValue"
              class="mt-2 whitespace-pre-wrap break-words text-sm leading-relaxed text-gray-700"
            >
              —
            </p>
          </div>

          <!-- Meta grid -->
          <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
            <div class="rounded-xl border border-gray-200 bg-white p-4">
              <p class="text-[11px] font-semibold text-gray-800">Publish At</p>
              <p id="previewNuggetPublishAt" class="mt-1 text-xs text-gray-700">
                —
              </p>
            </div>

            <div class="rounded-xl border border-gray-200 bg-white p-4">
              <p class="text-[11px] font-semibold text-gray-800">Audience</p>
              <p id="previewNuggetType" class="mt-1 text-xs text-gray-700">—</p>
            </div>

            <div class="rounded-xl border border-gray-200 bg-white p-4">
              <p class="text-[11px] font-semibold text-gray-800">Created</p>
              <p id="previewNuggetCreatedAt" class="mt-1 text-xs text-gray-700">
                —
              </p>
            </div>

            <div class="rounded-xl border border-gray-200 bg-white p-4">
              <p class="text-[11px] font-semibold text-gray-800">Updated</p>
              <p id="previewNuggetUpdatedAt" class="mt-1 text-xs text-gray-700">
                —
              </p>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <div class="mt-4 border-t border-gray-100 pt-3">
          <div class="flex flex-col-reverse gap-2 sm:flex-row sm:justify-end">
            <button
              type="button"
              class="w-full rounded-md border border-gray-300 px-3 py-2 text-xs text-gray-700 hover:bg-gray-100 sm:w-auto"
              onclick="closePreviewNuggetModal()"
            >
              Close
            </button>
          </div>
        </div>
      </div>
      <!-- /Body -->
    </div>
  </div>
</div>

<script>
  let selectedNuggetIdForPreview = null;

  /**
   * Use on your Preview button:
   * <button onclick="openPreviewNuggetModal(this)" data-nugget-id="123">Preview</button>
   */
  async function openPreviewNuggetModal(btn) {
    const modal = document.getElementById('previewNuggetModal');
    if (!modal || !btn) return;

    selectedNuggetIdForPreview = btn.dataset.nuggetId || null;
    if (!selectedNuggetIdForPreview) return;

    modal.classList.remove('hidden');
    modal.classList.add('block');

    showPreviewLoading();
    hidePreviewError();
    hidePreviewContent();

    window.__previewNuggetEscHandler = (e) => {
      if (e.key === 'Escape') closePreviewNuggetModal();
    };
    document.addEventListener('keydown', window.__previewNuggetEscHandler);

    try {
      const res = await fetch(
        `/nuggets/details/${selectedNuggetIdForPreview}`,
        {
          method: 'GET',
          credentials: 'include',
          headers: { 'X-Requested-With': 'XMLHttpRequest' },
        },
      );

      if (!res.ok) {
        showPreviewError('Could not load nugget details.');
        return;
      }

      const data = await res.json();

      // ✅ supports: { data: {...} } OR direct object
      const nugget = data?.data ?? data ?? {};

      renderPreviewNugget(nugget);
    } catch (err) {
      console.error(err);
      showPreviewError('Something went wrong while loading.');
    } finally {
      hidePreviewLoading();
    }
  }

  function closePreviewNuggetModal() {
    const modal = document.getElementById('previewNuggetModal');
    if (!modal) return;

    modal.classList.add('hidden');
    modal.classList.remove('block');

    selectedNuggetIdForPreview = null;

    hidePreviewLoading();
    hidePreviewError();
    hidePreviewContent();

    setText('previewNuggetTitle', 'Nugget Preview');
    setText('previewNuggetSubTitle', '—');

    if (window.__previewNuggetEscHandler) {
      document.removeEventListener('keydown', window.__previewNuggetEscHandler);
      window.__previewNuggetEscHandler = null;
    }
  }

  // Backdrop click close
  (function bindPreviewBackdropClose() {
    const modal = document.getElementById('previewNuggetModal');
    if (!modal) return;

    modal.addEventListener('click', (e) => {
      if (e.target === modal) closePreviewNuggetModal();
    });
  })();

  function renderPreviewNugget(data) {
    const n = data.nugget;
    // Core fields (adjust if your API uses different names)
    const id = n?.id ?? n?.nuggetId ?? selectedNuggetIdForPreview;
    const title = n?.title ?? '';
    const body = n?.body ?? n?.content ?? '';
    const nuggetType = n?.nuggetType ?? n?.audience ?? '';
    const status = n?.status ?? n?.state ?? '';
    const publishAt = n?.publishAt ?? n?.scheduledAt ?? null;
    const createdAt = n?.createdAt ?? null;
    const updatedAt = n?.updatedAt ?? null;

    // ✅ Engagement stats (supports multiple common shapes)
    const stats =
      data?.engagement ??
      data?.engagementStats ??
      data?.stats ??
      data?.counts ??
      data?.metrics ??
      {};

    const likes = toNum(stats?.likesCount);
    const shares = toNum(stats?.shareCount ?? 0);
    const comments = toNum(stats?.commentsCount ?? 0);

    // Header texts
    setText('previewNuggetTitle', title ? title : 'Nugget Preview');
    setText('previewNuggetSubTitle', id ? `ID: ${id}` : '—');

    // Pills
    setText('previewNuggetTypePill', nuggetType ? nuggetType : '—');
    setText('previewNuggetType', nuggetType ? nuggetType : '—');

    const statusPill = document.getElementById('previewNuggetStatusPill');
    if (statusPill) {
      if (status) {
        statusPill.classList.remove('hidden');
        statusPill.textContent = status;
        statusPill.className =
          'inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium ' +
          (status === 'PUBLISHED'
            ? 'bg-green-50 text-green-700'
            : status === 'DRAFT'
              ? 'bg-yellow-50 text-yellow-700'
              : status === 'ARCHIVED'
                ? 'bg-gray-100 text-gray-700'
                : 'bg-slate-100 text-slate-700');
      } else {
        statusPill.classList.add('hidden');
      }
    }

    const schedulePill = document.getElementById('previewNuggetSchedulePill');
    if (schedulePill) {
      if (publishAt) schedulePill.classList.remove('hidden');
      else schedulePill.classList.add('hidden');
    }

    // Title/body
    setText('previewNuggetTitleValue', title || '—');
    setText('previewNuggetBodyValue', body || '—');

    // Meta
    setText(
      'previewNuggetPublishAt',
      publishAt ? formatDateTime(publishAt) : '—',
    );
    setText(
      'previewNuggetCreatedAt',
      createdAt ? formatDateTime(createdAt) : '—',
    );
    setText(
      'previewNuggetUpdatedAt',
      updatedAt ? formatDateTime(updatedAt) : '—',
    );

    // ✅ Stats
    setText('previewStatComments', String(comments));
    setText('previewStatLikes', String(likes));
    setText('previewStatShares', String(shares));

    // Stats updated pill (optional)
    const statsUpdated =
      stats?.updatedAt ?? stats?.lastUpdatedAt ?? n?.statsUpdatedAt ?? null;
    const statsPill = document.getElementById('previewEngagementUpdatedAtPill');
    if (statsPill) {
      if (statsUpdated) {
        statsPill.classList.remove('hidden');
        statsPill.textContent = `Updated: ${formatDateTime(statsUpdated)}`;
      } else {
        statsPill.classList.add('hidden');
      }
    }

    // Copy button
    const copyBtn = document.getElementById('previewCopyBtn');
    if (copyBtn) {
      copyBtn.disabled = !(body && String(body).trim().length);
      copyBtn.onclick = async () => {
        try {
          await navigator.clipboard.writeText(String(body || ''));
          const old = copyBtn.textContent;
          copyBtn.textContent = 'Copied!';
          setTimeout(() => (copyBtn.textContent = old), 900);
        } catch (_) {
          alert('Copy failed.');
        }
      };
    }

    showPreviewContent();
  }

  function toNum(v) {
    const n = Number(v);
    return Number.isFinite(n) ? n : 0;
  }

  function showPreviewLoading() {
    const el = document.getElementById('previewNuggetLoading');
    if (el) el.classList.remove('hidden');
  }
  function hidePreviewLoading() {
    const el = document.getElementById('previewNuggetLoading');
    if (el) el.classList.add('hidden');
  }
  function showPreviewError(msg) {
    hidePreviewLoading();
    const el = document.getElementById('previewNuggetError');
    if (!el) return;
    el.textContent = msg || 'Could not load nugget details.';
    el.classList.remove('hidden');
  }
  function hidePreviewError() {
    const el = document.getElementById('previewNuggetError');
    if (el) el.classList.add('hidden');
  }
  function showPreviewContent() {
    const el = document.getElementById('previewNuggetContent');
    if (el) el.classList.remove('hidden');
  }
  function hidePreviewContent() {
    const el = document.getElementById('previewNuggetContent');
    if (el) el.classList.add('hidden');
  }

  function setText(id, value) {
    const el = document.getElementById(id);
    if (el) el.textContent = value ?? '—';
  }

  function formatDateTime(value) {
    try {
      const d = new Date(value);
      if (Number.isNaN(d.getTime())) return String(value);
      return d.toLocaleString();
    } catch (_) {
      return String(value);
    }
  }
</script>
