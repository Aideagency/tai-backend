<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    :root {
      --color-primary: #55D368;
      --color-primary-light: #6FE886;
      --color-primary-dark: #2FA748;

      --color-secondary: #8EE29A;
      --color-secondary-light: #A8F7B3;
      --color-secondary-dark: #65B171;
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100 flex items-center justify-center">

  <div class="w-full max-w-md bg-white rounded-2xl shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">
      Admin Login
    </h1>

    <!-- Server-side flash error -->
    <% if (typeof error !=="undefined" && error) { %>
      <div class="mb-4 rounded-lg bg-red-50 border border-red-200 text-red-700 text-sm px-4 py-3">
        <%= error %>
      </div>
    <% } %>

    <form id="loginForm" action="/admin-views/login" method="POST" novalidate>

      <!-- Email -->
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="you@example.com"
          value="<%= typeof email !== 'undefined' ? email : '' %>"
          required
        />
        <p id="emailError" class="mt-1 text-xs text-red-600 hidden"></p>
      </div>

      <!-- Password -->
      <div class="mb-6">
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
          Password
        </label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm
                 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                 focus:border-[var(--color-primary)]"
          placeholder="••••••••"
          required
        />
        <p id="passwordError" class="mt-1 text-xs text-red-600 hidden"></p>
      </div>

      <button
        type="submit"
        id="loginBtn"
        class="w-full inline-flex justify-center items-center rounded-lg
               bg-[var(--color-primary)] text-white text-sm font-semibold py-2.5
               hover:bg-[var(--color-primary-dark)]
               focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]
               focus:ring-offset-2 transition-all"
      >
        <span id="loginBtnText">Sign in</span>

        <!-- Loader -->
        <svg
          id="loginLoader"
          class="hidden animate-spin h-5 w-5 ml-2 text-white"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle
            class="opacity-25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"
          ></circle>
          <path
            class="opacity-75"
            fill="currentColor"
            d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"
          ></path>
        </svg>
      </button>
    </form>
  </div>

  <!-- Loader behaviour -->
  <script>
    const form = document.getElementById('loginForm');
    const loginBtn = document.getElementById('loginBtn');
    const loginLoader = document.getElementById('loginLoader');
    const loginBtnText = document.getElementById('loginBtnText');

    form.addEventListener('submit', function () {
      loginBtn.disabled = true;
      loginBtn.classList.add('opacity-70', 'cursor-not-allowed');

      loginLoader.classList.remove('hidden');
      loginBtnText.textContent = 'Signing in...';
    });
  </script>

</body>
</html>
