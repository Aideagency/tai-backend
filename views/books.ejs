<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Books</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
  <style>
    :root {
      --color-primary: #55D368;
      --color-primary-light: #6FE886;
      --color-primary-dark: #2FA748;

      --color-secondary: #8EE29A;
      --color-secondary-light: #A8F7B3;
      --color-secondary-dark: #65B171;
    }
  </style>
</head>

<body class="min-h-screen bg-gray-100">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { admin, currentPath: "books" }) %>

    <!-- Main content -->
    <div class="flex-1 flex flex-col min-h-screen">
      <!-- Header -->
      <%- include('partials/header', { admin, pageTitle: 'Books' }) %>

      <!-- Page content -->
      <main class="p-6 space-y-6">

        <!-- Top bar: title + filters + Add Book -->
        <section class="bg-white rounded-2xl shadow-sm border-l-4 border-[var(--color-primary)] p-4 flex flex-col md:flex-row md:items-center md:justify-between gap-3">
          <div>
            <h3 class="text-base font-semibold text-[var(--color-primary-dark)]">Books</h3>
            <p class="text-xs text-gray-500">
              Manage all books. Total: <%= meta?.totalItems || 0 %>
            </p>
          </div>

          <div class="flex flex-col md:flex-row items-stretch md:items-center gap-3 w-full md:w-auto">

            <!-- Filters: search + ownership + access + published -->
            <form method="GET" action="/admin-views/books" class="flex flex-col md:flex-row items-stretch md:items-center gap-2 w-full md:w-auto">

              <!-- Search -->
              <input type="text" name="q" placeholder="Search by title, author..." value="<%= (filters && filters.q) || q || '' %>" class="flex-1 md:w-64 rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]" />

              <!-- Ownership -->
              <select name="ownershipType" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]">
                <option value="">All ownership</option>
                <option value="IN_HOUSE" <%= (filters && filters.ownershipType === 'IN_HOUSE') ? 'selected' : '' %>>In-house</option>
                <option value="EXTERNAL" <%= (filters && filters.ownershipType === 'EXTERNAL') ? 'selected' : '' %>>External</option>
              </select>

              <!-- Access -->
              <select name="accessType" class="rounded-lg border border-gray-300 px-3 py-2 text-xs
                  focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]
                  focus:border-[var(--color-primary)]">
                <option value="">All access</option>
                <option value="FREE" <%= (filters && filters.accessType === 'FREE') ? 'selected' : '' %>>Free</option>
                <option value="PAID" <%= (filters && filters.accessType === 'PAID') ? 'selected' : '' %>>Paid</option>
              </select>

              <!-- Published only toggle -->
              <label class="inline-flex items-center gap-1 text-[11px] text-gray-600">
                <input type="checkbox" name="publishedOnly" value="true" <%= (filters && filters.publishedOnly) ? 'checked' : '' %> class="rounded border-gray-300 text-[var(--color-primary)] focus:ring-[var(--color-primary)]" />
                Published only
              </label>

              <button type="submit" class="inline-flex items-center rounded-lg
                bg-[var(--color-primary)] text-white text-xs font-semibold px-3 py-2
                hover:bg-[var(--color-primary-dark)]
                focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
                Apply
              </button>
            </form>

            <!-- Add Book button -->
            <button type="button" onclick="openAddBookModal()" class="inline-flex items-center justify-center rounded-lg
                bg-[var(--color-secondary-dark)] text-white text-xs font-semibold px-4 py-2
                hover:bg-[var(--color-primary-dark)]
                focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]">
              + Add Book
            </button>

          </div>
        </section>

        <!-- Books table -->
        <section class="bg-white rounded-2xl shadow-sm p-4">
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs table-auto">
              <thead>
                <tr class="border-b bg-gray-50 text-gray-600">
                  <th class="px-3 py-2 text-left font-medium">#</th>
                  <th class="px-3 py-2 text-left font-medium">Book</th>
                  <th class="px-3 py-2 text-left font-medium">Ownership</th>
                  <th class="px-3 py-2 text-left font-medium">Access</th>
                  <th class="px-3 py-2 text-left font-medium">Price</th>
                  <th class="px-3 py-2 text-left font-medium">Published</th>
                  <th class="px-3 py-2 text-left font-medium text-right">Downloads</th>
                  <th class="px-3 py-2 text-left font-medium text-right">Actions</th>
                </tr>
              </thead>

              <tbody class="divide-y divide-gray-100">
                <% if (items && items.length > 0) { %>
                <% items.forEach(function(book, index) { %>
                <tr class="hover:bg-gray-50">

                  <!-- Index -->
                  <td class="px-3 py-2 text-gray-500">
                    <%= (meta.itemsPerPage * (meta.currentPage - 1)) + (index + 1) %>
                  </td>

                  <!-- Book -->
                  <td class="px-3 py-2">
                    <div class="flex items-center gap-3">
                      <div class="h-10 w-10 rounded-lg bg-gray-100 border overflow-hidden flex items-center justify-center">
                        <% if (book.coverImageUrl) { %>
                        <img src="<%= book.coverImageUrl %>" alt="cover" class="h-full w-full object-cover" />
                        <% } else { %>
                        <span class="text-[10px] text-gray-400">No cover</span>
                        <% } %>
                      </div>

                      <div class="flex flex-col">
                        <span class="font-semibold text-gray-800">
                          <%= book.title || '-' %>
                        </span>
                        <span class="text-[10px] text-gray-500">
                          <%= book.author || '—' %>
                        </span>
                      </div>
                    </div>
                  </td>

                  <!-- Ownership -->
                  <td class="px-3 py-2">
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium
                      <%= book.ownershipType === 'EXTERNAL'
                        ? 'bg-slate-100 text-slate-700'
                        : 'bg-[var(--color-secondary-light)] text-[var(--color-secondary-dark)]' %>">
                      <%= book.ownershipType || '-' %>
                    </span>
                  </td>

                  <!-- Access -->
                  <td class="px-3 py-2">
                    <% if (book.ownershipType === 'EXTERNAL') { %>
                    <span class="text-[10px] text-gray-400">—</span>
                    <% } else { %>
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium
                        <%= book.accessType === 'PAID'
                          ? 'bg-yellow-50 text-yellow-700'
                          : 'bg-emerald-50 text-emerald-700' %>">
                      <%= book.accessType || '-' %>
                    </span>
                    <% } %>
                  </td>

                  <!-- Price -->
                  <td class="px-3 py-2 text-gray-700">
                    <% if (book.ownershipType === 'EXTERNAL') { %>
                    <span class="text-[10px] text-gray-400">—</span>
                    <% } else if (!book.price || Number(book.price) === 0) { %>
                    <span class="inline-flex items-center rounded-full bg-emerald-50 text-emerald-700 px-2 py-0.5 text-[10px] font-medium">
                      Free
                    </span>
                    <% } else { %>
                    <span class="text-[11px] text-gray-800">
                      ₦<%= book.price %>
                    </span>
                    <% } %>
                  </td>

                  <!-- Published -->
                  <td class="px-3 py-2">
                    <% if (book.isPublished) { %>
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-green-50 text-green-700">
                      Published
                    </span>
                    <% } else { %>
                    <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-gray-100 text-gray-700">
                      Draft
                    </span>
                    <% } %>
                  </td>

                  <!-- Downloads -->
                  <td class="px-3 py-2 text-right text-gray-700">
                    <div class="flex flex-col items-end leading-tight">
                      <span class="text-[11px] font-semibold text-gray-800">
                        <%= (book.downloadStats && book.downloadStats.totalDownloads) ? book.downloadStats.totalDownloads : 0 %>
                      </span>
                      <span class="text-[10px] text-gray-500">
                        Active:
                        <%= (book.downloadStats && book.downloadStats.activeDownloads) ? book.downloadStats.activeDownloads : 0 %>
                      </span>
                    </div>
                  </td>

                  <!-- Actions -->
                  <td class="px-3 py-2 text-right space-x-1 whitespace-nowrap">
                    <button type="button" class="inline-flex items-center rounded-md border border-sky-500 text-sky-600 px-2 py-1 text-[11px] font-semibold hover:bg-sky-50 transition" onclick="openPreviewBookModal(this)" data-book-id="<%= book.id %>" data-book-title="<%= book.title || '' %>" data-book-author="<%= book.author || '' %>" data-book-description="<%- book.description || '' %>" data-book-ownership-type="<%= book.ownershipType || '' %>" data-book-access-type="<%= book.accessType || '' %>" data-book-price="<%= book.price || '' %>" data-book-external-url="<%= book.externalUrl || '' %>" data-book-pdf-url="<%= book.pdfUrl || '' %>" data-book-cover-image-url="<%= book.coverImageUrl || '' %>" data-book-is-published="<%= book.isPublished ? 'true' : 'false' %>" data-book-created-at="<%= book.createdAt ? new Date(book.createdAt).toISOString() : '' %>" data-book-updated-at="<%= book.updatedAt ? new Date(book.updatedAt).toISOString() : '' %>" data-book-download-total="<%= (book.downloadStats && book.downloadStats.totalDownloads) ? book.downloadStats.totalDownloads : 0 %>" data-book-download-active="<%= (book.downloadStats && book.downloadStats.activeDownloads) ? book.downloadStats.activeDownloads : 0 %>">
                      Preview
                    </button>

                    <button type="button" class="inline-flex items-center rounded-md border border-[var(--color-primary)] text-[var(--color-primary-dark)] px-2 py-1 text-[11px] font-semibold hover:bg-[var(--color-secondary-light)] transition" onclick="openUpdateBookModal(this)" data-book-id="<%= book.id %>" data-book-title="<%= book.title || '' %>" data-book-author="<%= book.author || '' %>" data-book-description="<%- book.description || '' %>" data-book-ownership-type="<%= book.ownershipType || 'IN_HOUSE' %>" data-book-access-type="<%= book.accessType || '' %>" data-book-price="<%= book.price || '' %>" data-book-external-url="<%= book.externalUrl || '' %>" data-book-is-published="<%= book.isPublished ? 'true' : 'false' %>" data-book-cover-image-url="<%= book.coverImageUrl || '' %>" data-book-pdf-url="<%= book.pdfUrl || '' %>">
                      Update
                    </button>

                    <button type="button" class="inline-flex items-center px-2 py-1 text-[11px] rounded-md border border-red-500 text-red-600 hover:bg-red-50" onclick="openDeleteBookModal(this)" data-book-id="<%= book.id %>" data-book-title="<%= book.title || '' %>">
                      Delete
                    </button>
                  </td>

                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="8" class="px-3 py-6 text-center text-gray-500 text-xs">
                    No books found.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (meta && meta.totalPages > 1) { %>
          <div class="mt-4 flex items-center justify-between text-xs text-gray-600">
            <div>
              Page <span class="font-semibold"><%= meta.currentPage %></span>
              of <span class="font-semibold"><%= meta.totalPages %></span> —
              Showing <%= items.length %> of <%= meta.totalItems %> books
            </div>

            <div class="flex items-center gap-1">
              <% const currentQ = (filters && filters.q) || q || ''; %>
              <% const currentOwnership = (filters && filters.ownershipType) || ''; %>
              <% const currentAccess = (filters && filters.accessType) || ''; %>
              <% const publishedOnly = (filters && filters.publishedOnly) ? 'true' : ''; %>

              <% function buildQuery(pageNum) {
                  let qs = '?page=' + pageNum;
                  if (currentQ) qs += '&q=' + encodeURIComponent(currentQ);
                  if (currentOwnership) qs += '&ownershipType=' + encodeURIComponent(currentOwnership);
                  if (currentAccess) qs += '&accessType=' + encodeURIComponent(currentAccess);
                  if (publishedOnly) qs += '&publishedOnly=true';
                  return qs;
                } %>

              <!-- Prev -->
              <% if (meta.currentPage > 1) { %>
              <a href={"/admin-views/books" + buildQuery(meta.currentPage - 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Prev
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Prev
              </span>
              <% } %>

              <!-- Page numbers -->
              <% for (let p = 1; p <= meta.totalPages; p++) { %>
              <a href={"/admin-views/books" + buildQuery(p)} class="px-2 py-1 rounded border text-xs
                <%= p === meta.currentPage
                  ? 'border-[var(--color-primary)] bg-[var(--color-secondary-light)] text-[var(--color-primary-dark)] font-semibold'
                  : 'border-gray-300 hover:bg-[var(--color-secondary-light)]' %>">
                <%= p %>
              </a>
              <% } %>

              <!-- Next -->
              <% if (meta.currentPage < meta.totalPages) { %>
              <a href={"/admin-views/books" + buildQuery(meta.currentPage + 1)} class="px-2 py-1 rounded border border-gray-300 hover:bg-[var(--color-secondary-light)]">
                Next
              </a>
              <% } else { %>
              <span class="px-2 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                Next
              </span>
              <% } %>
            </div>
          </div>
          <% } %>
        </section>
      </main>
    </div>
  </div>

  <%- include('partials/books/add-book-modal') %>
  <%- include('partials/books/update-book-modal') %>
  <%- include('partials/books/delete-book-modal') %>
  <%- include('partials/books/preview-book-modal') %>
</body>

</html>