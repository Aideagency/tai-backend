<!-- views/course-details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Course Details</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>

  <style>
    :root {
      --color-primary: #55D368;
      --color-primary-light: #6FE886;
      --color-primary-dark: #2FA748;

      --color-secondary: #8EE29A;
      --color-secondary-light: #A8F7B3;
      --color-secondary-dark: #65B171;
    }
  </style>

  <script>
    // lightweight shared state for the page
    window.CourseDetailsState = {
      courseId: <%= course?.id || 0 %>
    };
  </script>
</head>

<body class="min-h-screen bg-gray-100">
  <div class="flex">
    <%- include('partials/sidebar', { admin, currentPath: "courses" }) %>

    <div class="flex-1 flex flex-col min-h-screen">
      <%- include('partials/header', { admin, pageTitle: 'Course Details' }) %>

       <main class="p-6 space-y-6">
          <!-- Breadcrumb / top bar -->
          <section
            class="bg-white rounded-2xl shadow-sm border-l-4 border-[var(--color-primary)] p-4 flex flex-col md:flex-row md:items-center md:justify-between gap-3"
          >
            <div>
              <div class="flex items-center gap-2 text-xs text-gray-500">
                <a href="/admin-views/courses" class="hover:underline"
                  >Courses</a
                >
                <span>/</span>
                <span class="text-gray-700 font-semibold"
                  ><%= course?.title || 'Course' %></span
                >
              </div>

              <h3 class="text-base font-semibold text-[var(--color-primary-dark)]">
                <%= course?.title || 'Course Details' %>
              </h3>

              <p class="text-xs text-gray-500">
                ID: <%= course?.id %> • Updated:
                <%= course?.updatedAt ? new Date(course.updatedAt).toLocaleString() : '-' %>
                • Lessons: <%= stats?.totalLessons ?? 0 %>
                • Attachments: <%= stats?.totalAttachments ?? 0 %>
              </p>
            </div>

            <div class="flex flex-col md:flex-row items-stretch md:items-center gap-2 w-full md:w-auto">
              <a
                href="/admin-views/courses"
                class="inline-flex items-center justify-center rounded-lg border border-gray-300 text-gray-700 text-xs font-semibold px-3 py-2 hover:bg-gray-50"
              >
                ← Back
              </a>

              <button
                type="button"
                onclick="openAddLessonModal()"
                class="inline-flex items-center justify-center rounded-lg bg-[var(--color-secondary-dark)] text-white text-xs font-semibold px-4 py-2 hover:bg-[var(--color-primary-dark)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-light)]"
              >
                + Add Lesson
              </button>

              <button
                type="button"
                onclick="toggleReorderMode()"
                class="inline-flex items-center justify-center rounded-lg border border-[var(--color-primary)] text-[var(--color-primary-dark)] text-xs font-semibold px-3 py-2 hover:bg-[var(--color-secondary-light)]"
              >
                Reorder Lessons
              </button>
            </div>
          </section>

          <!-- Course Overview -->
          <section class="bg-white rounded-2xl shadow-sm p-4">
            <div class="flex flex-col lg:flex-row gap-4">
              <div class="w-full lg:w-64">
                <div class="rounded-xl border bg-gray-50 overflow-hidden">
                  <% if (course?.thumbnailUrl) { %>
                  <img
                    src="<%= course.thumbnailUrl %>"
                    alt="thumbnail"
                    class="w-full h-40 object-cover"
                  />
                  <% } else { %>
                  <div class="h-40 flex items-center justify-center text-xs text-gray-400">
                    No thumbnail
                  </div>
                  <% } %>
                </div>

                <div class="mt-3 space-y-2 text-xs">
                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Access</span>
                    <% if (course?.isFree) { %>
                    <span
                      class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-emerald-50 text-emerald-700"
                      >Free</span
                    >
                    <% } else { %>
                    <span
                      class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-yellow-50 text-yellow-700"
                      >Paid</span
                    >
                    <% } %>
                  </div>

                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Price</span>
                    <span class="text-gray-800 font-semibold">
                      <% if (course?.isFree) { %> Free <% } else { %>
                      <%= (course?.currency || 'NGN') %> <%= course?.price || 0 %>
                      <% } %>
                    </span>
                  </div>

                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Status</span>
                    <span
                      class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium
                        <%= course?.status === 'PUBLISHED'
                          ? 'bg-green-50 text-green-700'
                          : (course?.status === 'ARCHIVED'
                            ? 'bg-gray-100 text-gray-700'
                            : 'bg-slate-100 text-slate-700') %>"
                    >
                      <%= course?.status || '-' %>
                    </span>
                  </div>

                  <div class="pt-2 border-t">
                    <a
                      href="/admin-views/courses"
                      class="text-[11px] text-gray-500 hover:underline"
                      >Manage all courses</a
                    >
                  </div>
                </div>
              </div>

              <div class="flex-1">
                <h4 class="text-sm font-semibold text-gray-800 mb-2">
                  About this course
                </h4>

                <div class="prose max-w-none text-sm">
                  <% if (course?.descriptionHtml) { %>
                  <div class="text-[13px] text-gray-700 leading-relaxed">
                    <%- course.descriptionHtml %>
                  </div>
                  <% } else { %>
                  <p class="text-xs text-gray-500">No description provided.</p>
                  <% } %>
                </div>
              </div>
            </div>
          </section>

          <!-- Lessons -->
          <section class="bg-white rounded-2xl shadow-sm p-4">
            <div class="flex items-center justify-between mb-3">
              <div>
                <h4 class="text-sm font-semibold text-gray-800">Lessons</h4>
                <p class="text-xs text-gray-500">
                  Manage lessons, attachments, and ordering for this course.
                </p>
              </div>

              <!-- Reorder bar -->
              <div id="reorderBar" class="hidden items-center gap-2">
                <span class="text-xs text-gray-600"
                  >Reorder mode is ON — use ↑ ↓ then save.</span
                >
                <button
                  type="button"
                  onclick="saveLessonOrder()"
                  class="inline-flex items-center gap-2 rounded-lg bg-[var(--color-primary)] text-white text-xs font-semibold px-3 py-2 hover:bg-[var(--color-primary-dark)]"
                >
                  Save Order
                </button>
                <button
                  type="button"
                  onclick="toggleReorderMode(false)"
                  class="inline-flex items-center rounded-lg border border-gray-300 text-gray-700 text-xs font-semibold px-3 py-2 hover:bg-gray-50"
                >
                  Cancel
                </button>
              </div>
            </div>

            <% if (lessons && lessons.length > 0) { %>
            <div id="lessonsContainer" class="space-y-3">
              <% lessons.forEach(function(lesson, idx) { %>
              <div
                class="rounded-xl border border-gray-200 overflow-hidden"
                data-lesson-id="<%= lesson.id %>"
              >
                <!-- Lesson header -->
                <div class="bg-gray-50 px-4 py-3 flex items-start justify-between gap-3">
                  <div class="min-w-0">
                    <div class="flex items-center gap-2">
                      <span class="text-[10px] px-2 py-0.5 rounded-full bg-slate-100 text-slate-700 font-semibold">
                        #<%= lesson.sortOrder ?? (idx + 1) %>
                      </span>
                      <h5 class="text-sm font-semibold text-gray-800 truncate">
                        <%= lesson.title || 'Untitled Lesson' %>
                      </h5>
                    </div>

                    <p class="text-[11px] text-gray-500 mt-1">
                      Lesson ID: <%= lesson.id %> •
                      Updated: <%= lesson.updatedAt ? new Date(lesson.updatedAt).toLocaleString() : '-' %>
                      <% if (lesson.youtubeUrl) { %> •
                      <a href="<%= lesson.youtubeUrl %>" target="_blank" class="text-sky-600 hover:underline">YouTube</a>
                      <% } %>
                    </p>
                  </div>

                  <div class="flex items-center gap-1 whitespace-nowrap">
                    <!-- Reorder controls (hidden until reorder mode) -->
                    <div class="reorderControls hidden items-center gap-1 mr-2">
                      <button
                        type="button"
                        class="px-2 py-1 text-[11px] rounded-md border border-gray-300 hover:bg-white"
                        onclick="moveLessonUp(<%= lesson.id %>)"
                        title="Move up"
                      >
                        ↑
                      </button>
                      <button
                        type="button"
                        class="px-2 py-1 text-[11px] rounded-md border border-gray-300 hover:bg-white"
                        onclick="moveLessonDown(<%= lesson.id %>)"
                        title="Move down"
                      >
                        ↓
                      </button>
                    </div>

                    <button
                      type="button"
                      class="inline-flex items-center rounded-md border border-[var(--color-primary)] text-[var(--color-primary-dark)] px-2 py-1 text-[11px] font-semibold hover:bg-[var(--color-secondary-light)] transition"
                      onclick="openUpdateLessonModal(this)"
                      data-lesson-id="<%= lesson.id %>"
                      data-lesson-title="<%= lesson.title || '' %>"
                      data-lesson-description="<%- lesson.descriptionHtml || '' %>"
                      data-lesson-youtube-url="<%= lesson.youtubeUrl || '' %>"
                      data-lesson-sort-order="<%= lesson.sortOrder ?? (idx + 1) %>"
                    >
                      Edit
                    </button>

                    <button
                      type="button"
                      class="inline-flex items-center px-2 py-1 text-[11px] rounded-md border border-red-500 text-red-600 hover:bg-red-50"
                      onclick="openDeleteLessonModal(this)"
                      data-lesson-id="<%= lesson.id %>"
                      data-lesson-title="<%= lesson.title || '' %>"
                    >
                      Delete
                    </button>

                    <button
                      type="button"
                      class="inline-flex items-center rounded-md border border-sky-500 text-sky-600 px-2 py-1 text-[11px] font-semibold hover:bg-sky-50 transition"
                      onclick="openAddAttachmentModal(this)"
                      data-lesson-id="<%= lesson.id %>"
                      data-lesson-title="<%= lesson.title || '' %>"
                    >
                      + Attachment
                    </button>
                  </div>
                </div>

                <!-- Lesson body -->
                <div class="px-4 py-3">
                  <% if (lesson.descriptionHtml) { %>
                  <div class="text-[12px] text-gray-700 leading-relaxed">
                    <%- lesson.descriptionHtml %>
                  </div>
                  <% } else { %>
                  <p class="text-xs text-gray-500">No lesson description.</p>
                  <% } %>

                  <!-- Attachments -->
                  <div class="mt-4">
                    <div class="flex items-center justify-between">
                      <p class="text-xs font-semibold text-gray-800">
                        Attachments
                        <span class="text-[11px] text-gray-500 font-normal">
                          (<%= (lesson.attachments && lesson.attachments.length) ? lesson.attachments.length : 0 %>)
                        </span>
                      </p>
                    </div>

                    <% if (lesson.attachments && lesson.attachments.length > 0) { %>
                    <div class="mt-2 overflow-x-auto">
                      <table class="min-w-full text-xs table-auto">
                        <thead>
                          <tr class="border-b bg-gray-50 text-gray-600">
                            <th class="px-3 py-2 text-left font-medium">Title</th>
                            <th class="px-3 py-2 text-left font-medium">Type</th>
                            <th class="px-3 py-2 text-left font-medium">Size</th>
                            <th class="px-3 py-2 text-left font-medium">Link</th>
                            <th class="px-3 py-2 text-right font-medium">Actions</th>
                          </tr>
                        </thead>

                        <tbody class="divide-y divide-gray-100">
                          <% lesson.attachments.forEach(function(att) { %>
                          <tr class="hover:bg-gray-50">
                            <td class="px-3 py-2 font-semibold text-gray-800">
                              <%= att.title || '-' %>
                            </td>
                            <td class="px-3 py-2">
                              <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-medium bg-slate-100 text-slate-700">
                                <%= att.type || 'OTHER' %>
                              </span>
                            </td>
                            <td class="px-3 py-2 text-gray-600">
                              <%= typeof att.sizeBytes === 'number'
                                ? (att.sizeBytes / 1024).toFixed(1) + ' KB'
                                : '—' %>
                            </td>
                            <td class="px-3 py-2">
                              <% if (att.url) { %>
                              <a href="<%= att.url %>" target="_blank" class="text-sky-600 hover:underline">
                                View
                              </a>
                              <% } else { %>
                              <span class="text-gray-400">—</span>
                              <% } %>
                            </td>
                            <td class="px-3 py-2 text-right whitespace-nowrap">
                              <button
                                type="button"
                                class="inline-flex items-center px-2 py-1 text-[11px] rounded-md border border-red-500 text-red-600 hover:bg-red-50"
                                onclick="openDeleteAttachmentModal(this)"
                                data-attachment-id="<%= att.id %>"
                                data-attachment-title="<%= att.title || '' %>"
                                data-lesson-id="<%= lesson.id %>"
                                data-course-id="<%= course.id %>"
                              >
                                Delete
                              </button>
                            </td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                    <% } else { %>
                    <p class="text-[11px] text-gray-500 mt-2">
                      No attachments yet.
                    </p>
                    <% } %>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
            <% } else { %>
            <div class="px-3 py-10 text-center text-gray-500 text-xs">
              No lessons found for this course yet.
              <div class="mt-3">
                <button
                  type="button"
                  onclick="openAddLessonModal()"
                  class="inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)] text-white text-xs font-semibold px-4 py-2 hover:bg-[var(--color-primary-dark)]"
                >
                  + Add first lesson
                </button>
              </div>
            </div>
            <% } %>
          </section>
        </main>
    </div>
  </div>

  <!-- ✅ Include modals as standalone partials -->
  <%- include('partials/courses/lessons/add-lesson-modal') %>
  <%- include('partials/courses/lessons/update-lesson-modal') %>
  <%- include('partials/courses/lessons/delete-lesson-modal') %>

  <%- include('partials/courses/attachments/add-attachment-modal') %>
  <%- include('partials/courses/attachments/delete-attachment-modal') %>

  <%- include('partials/courses/lessons/reorder-lessons-script') %>
</body>
</html>
